# Literature Manager Configuration
# Copy this file to config.yaml and adjust paths/settings

# Paths (relative to Desktop/workshop)
workshop_root: "/Users/samleuthold/Desktop/workshop"
inbox_path: "workspace/inbox"
library_path: "library/literature"
tools_path: ".tools/literature-manager"

# Processing settings
confidence_threshold: 0.85           # Minimum confidence for auto-filing to by-topic/
min_papers_for_topic: 3              # Minimum papers before creating new topic
recent_retention_days: 7             # Days to keep papers in recent/ before cleanup
always_copy_to_recent: true          # Copy all papers to recent/ even if filed to topic

# Metadata extraction
preferred_methods:
  - doi_lookup                       # Try DOI + CrossRef API first
  - pdf_metadata                     # Try PDF metadata fields
  - llm_parsing                      # Use LLM as fallback

crossref_email: "your.email@example.com"  # Polite pool for CrossRef API

# LLM settings
llm_provider: "anthropic"
llm_model: "claude-haiku-4-20250514"  # Haiku 4.5 for cost efficiency
anthropic_api_key: "sk-ant-api03-..."  # Your Anthropic API key

# Topic matching weights
keyword_weight: 0.6
author_weight: 0.2
year_weight: 0.2

# File naming
max_title_words: 8                   # Maximum words in shortened title
max_filename_length: 200             # Maximum total filename length

# Duplicate handling
duplicate_action: "merge"            # Options: "merge", "skip", "prompt"
duplicate_keep_larger: true          # Keep larger file when merging

# Notifications
verbose: true                        # Print detailed processing info
notify_on_error: true               # Show errors prominently
